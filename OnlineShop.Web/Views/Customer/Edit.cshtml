@model OnlineShop.Web.Models.Customer

<h1>Edit @ViewData["FirstName"]</h1>

<form method="post">
    <input type="hidden" asp-for=@Model.CustomerID value=@ViewData["Id"] />
    <div class="form-group">
        <label asp-for=@Model.FirstName></label>
        <input asp-for=@Model.FirstName value=@ViewData["FirstName"] />
    </div>

    <div class="form-group">
        <label asp-for=@Model.LastName></label>
        <input asp-for=@Model.LastName value=@ViewData["LastName"] />
    </div>

    <div class="form-group">
        <label asp-for=@Model.Email></label>
        <input asp-for=@Model.Email value=@ViewData["Email"] />
    </div>

    <div class="form-group">
        <label asp-for=@Model.Phone1></label>
        <input asp-for=@Model.Phone1 value=@ViewData["PhoneNumber"] />
    </div>

    <input class="btn btn-default" type="submit" name="Update" value="Update" />

</form>